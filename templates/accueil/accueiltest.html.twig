{% endblock %}




{% block body %}
    {% block javascripts %}
       <script src="{{ asset('js/accueil.js') }}"></script> 
    {% endblock %}  

    <ul id="navbar">
        <img src="{{ asset ('img/logo.png') }}" alt="logo">
        {% if app.user %}    
        <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
        <li><a href="#">Mon profil</a></li>
        {% endif %}
        <li><a href="#">Accueil</a></li>
        <li><a href="#">Campus</a></li>
